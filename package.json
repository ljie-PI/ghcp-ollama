  "bin": {
    "ghcpo": "./src/ghcpo.js",
    "ghcpo-server": "./src/serverctl.js"
  },
  "dependencies": {
    "eslint_d": "^14.3.0",
    "express": "^4.18.2",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.10",
    "eslint": "^9.35.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module"
}
