{
  "name": "@ljie-pi/ghcp-ollama",
  "version": "0.1.3",
  "description": "Using LLMs provided by Github Copilot with Ollama APIs",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "node build.js",
    "server:start": "node src/serverctl.js start",
    "server:stop": "node src/serverctl.js stop",
    "server:restart": "node src/serverctl.js restart",
    "server:status": "node src/serverctl.js status"
